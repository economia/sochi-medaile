@import colors
@import prefixes
@import extraIg

.ig
    @import basics
.ig-background
    @import background
.ig.base
    margin-left -23px
    width 486px
    height auto
    .nation
        float left
        clear left
        width 100%
        height 60px
        position relative
        border-bottom 1px solid #aaa
        margin-top 10px
        overflow hidden
        .name
            position absolute
            top 0px
            left 0px
            font-size 0.8em
            color #444
            z-index 2
        .yearContainer
            z-index 1
            position absolute
            top 0px
            width 22px
            height 100%
            &:hover
                background #eee
                cursor help
            &.y-1992
                width 11px
                .year
                    left 1px
            .year
                position absolute
                width 8px
                bottom 0px
                left 7px
                .medalType
                    float left
                    width 100%
                    &.gold
                        background #D9A441
                    &.silver
                        background #CCC2C2
                    &.bronze
                        background #965A38

        .detail
            position absolute
            top 0px
            left -100%
            width 100%
            height 100%
            background rgba(255,255,255,0.9)
            transition left 0.8s cubic-bezier(0.17,0.67,0.32,1.27)
            z-index 3
            padding-top 19px
            &.phase-1
                left 0px
            .medal
                width 15px
                height 15px
                margin 2px
                border-radius 50%
                float left
                &.gold
                    background #D9A441
                &.silver
                    background #CCC2C2
                &.bronze
                    background #965A38
                &:hover
                    cursor help
            .close
                position absolute
                top 0px
                left 0px
                width 15px
                height 15px
                background #f00
                z-index 4


